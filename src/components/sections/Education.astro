---
import Section from "../Section.astro";

import { education } from "@/cv-spanish.json";
---

<Section title="EducaciÃ³n">
  <ul>
    {
    education.map(({ institution, degree, startDate, endDate }) => {

      const startYear = new Date(startDate).getUTCFullYear();
      const endYear = new Date(endDate).getUTCFullYear();
      const years = `${startYear} - ${endYear}`

      return (
        <li>
            <article>
              <header>
                <div>
                    <h3>{institution}</h3>
                    <p>{degree}</p>
                </div>
                <time>{years}</time>
              </header>
            </article>
          </li>
        )
    })
    }
  </ul>
</Section>

<style>
  ul {
    display: flex;
    flex-direction: column;
  }

  article h3 {
    font-weight: 500;
    color: #111;
  }

  header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
  }

  header p {
    line-height: 1.7rem;
  }

  time {
    color: #555;
    font-size: 0.85rem;
  }

  footer p {
    font-size: .75rem;
    line-height: 1rem;
    font-family: ui-monospace, SFMono-Regular, Menlo, Monaco, Consolas, Liberation Mono, Courier New, monospace;
    text-wrap: pretty
  }
</style>
