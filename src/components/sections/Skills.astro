---
import Section from "../Section.astro";

import { skills } from "@/cv-spanish.json";
---

<Section title="Skills">
  <ul>
    {
      skills.map(({ name }) => (
        <li>
          <span>{name}</span>
        </li>
      ))
    }
  </ul>
</Section>

<style>
  ul {
    display: flex;
    gap: 8px;
    flex-wrap: wrap;
  }

  li {
    border-radius: 6px;
    background-color: #111827cc;
    color: #eee;
    font-size: .75rem;
    line-height: 1rem;
    font-weight: 600;
    padding: 0.2rem 0.6rem;
    user-select: none;
  }

  li:hover {
    cursor: default;
  }


</style>
