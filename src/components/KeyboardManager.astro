  ></path></svg>`,
};

const profilesInfo = profiles.map(({ network, url }) => {
  const icon = SOCIAL_ICONS[network];
  const firstLetter = network[0].toUpperCase();

  return {
    id: network,
    title: network,
    section: "Links",
    url,
    icon,
    hotkey: `ctrl+${firstLetter}`,
  };
});
---

<footer class="no-print">
  Press <kbd>âŒ˜</kbd>+<kbd>b</kbd> to open the command menu
</footer>

<ninja-keys
  openHotkey="cmd+b,ctrl+b"
  data-profiles={JSON.stringify(profilesInfo)}
  placeholder="Buscar"
  hideBreadcrumbs
>
</ninja-keys>

<script>
  import "ninja-keys";
  const ninja = document.querySelector("ninja-keys");

  if (ninja !== null) {
    const profiles = ninja.getAttribute("data-profiles") ?? "[]";
    let parsedProfiles = JSON.parse(profiles);

    const data = parsedProfiles.map((profile: any) => {
      return {
        ...profile,
        handler: () => {
          window.open(profile.url, "_blank");
        },
      };
    });

    ninja.data = [
      {
        id: "print",
        title: "Print CV",
        hotkey: "ctrl+P",
        icon: `<svg style="margin-right: 8px" width="16px" class="text-gray-800 dark:text-white" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
    <path stroke="currentColor" stroke-linejoin="round" stroke-width="2" d="M16.4 18H19c.6 0 1-.4 1-1v-5c0-.6-.4-1-1-1H5a1 1 0 0 0-1 1v5c0 .6.4 1 1 1h2.6m9.4-7V5c0-.6-.4-1-1-1H8a1 1 0 0 0-1 1v6h10ZM7 15h10v4c0 .6-.4 1-1 1H8a1 1 0 0 1-1-1v-4Z"/>
  </svg>`,
        section: "actions",
        handler: () => {
          window.print();
        },
      },
      ...data,
    ];
  }
</script>

<style>
  @media print {
    ninja-keys {
      display: none;
    }
  }

  footer {
    background-color: #fdfdfd;
    border-top: 1px solid #eee;
    position: fixed;
    bottom: 0;
    width: 100%;
    padding-block: 8px;
    text-align: center;
    font-size: 0.85rem;
  }

  kbd {
    display: inline-flex;
    justify-self: center;
    justify-items: center;
    padding: 0.18rem 0.3rem;
    background-color: white;
    border: 1px solid gainsboro;
    font-size: small;
    color: black;
    border-radius: 3px;
  }

  @media print {
    .no-print {
      display: none;
    }
  }
</style>
